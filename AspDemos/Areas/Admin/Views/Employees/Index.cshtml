@model IEnumerable<AspDemos.Models.Employee>

@{
    ViewData["Title"] = "Employees";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-primary" asp-action="Create" open-modal>Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address.NumberAndStreet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address.Suburb)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address.PostCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FacebookProfile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TwitterProfile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InstagramProfile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LinkedInProfile)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address.NumberAndStreet)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address.Suburb)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address.PostCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FacebookProfile)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TwitterProfile)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InstagramProfile)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LinkedInProfile)
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id" open-modal>Edit</a>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id" open-modal>Details</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id" open-modal>Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
